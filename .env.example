# Hyperliquid API Configuration
HYPERLIQUID_API_KEY=your_api_key_here
HYPERLIQUID_SECRET=your_secret_here
HYPERLIQUID_TESTNET=true  # Set to false for mainnet

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Trading Configuration
# MULTI-ASSET MODE: Comma-separated list of assets to trade simultaneously
# Examples: BTC,ETH,SOL,ARB,AVAX,MATIC,LINK,UNI,AAVE,CRV
TRADING_ASSETS=BTC,ETH,SOL,ARB,AVAX

# SINGLE-ASSET MODE: Leave TRADING_ASSETS empty and use DEFAULT_ASSET
# DEFAULT_ASSET=BTC

MAX_POSITION_SIZE=10000  # Maximum position size in USD per asset
RISK_PER_TRADE=0.02  # 2% risk per trade
MAX_EXPOSURE=0.7  # 70% maximum portfolio exposure (across ALL assets combined)
TRADING_INTERVAL=300  # Trading loop interval in seconds (5 minutes)

# Risk Management
STOP_LOSS_PERCENT=0.05  # 5% stop loss
TAKE_PROFIT_PERCENT=0.08  # 8% take profit
MIN_CONFIDENCE=0.6  # Minimum AI confidence to execute trade
MIN_LIQUIDITY=1000000  # Minimum 24h volume in USD

# Technical Analysis
RSI_PERIOD=14
EMA_SHORT=20
EMA_LONG=50
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Database
DATABASE_URL=sqlite:///./trading_bot.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/trading_bot.log

# Monitoring (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ENABLE_NOTIFICATIONS=false

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000
